{
  "info": {
    "name": "QR Menu Manager API",
    "description": "Complete API collection for QR Menu Manager micro-SaaS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "restaurantId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Owner - Restaurant",
      "item": [
        {
          "name": "Create Restaurant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Restaurant\",\n  \"address\": \"123 Main St, City\",\n  \"tableNumber\": 20,\n  \"slug\": \"my-restaurant\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/owner/restaurant",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "restaurant"]
            }
          }
        },
        {
          "name": "Get Restaurants",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/restaurant",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "restaurant"]
            }
          }
        },
        {
          "name": "Update Restaurant",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Restaurant Name\",\n  \"tableNumber\": 25\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/owner/restaurant/{{restaurantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "restaurant", "{{restaurantId}}"]
            }
          }
        },
        {
          "name": "Delete Restaurant",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/restaurant/{{restaurantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "restaurant", "{{restaurantId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Owner - Categories",
      "item": [
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/categories?restaurantId={{restaurantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "categories"],
              "query": [
                {
                  "key": "restaurantId",
                  "value": "{{restaurantId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"{{restaurantId}}\",\n  \"name\": \"Appetizers\",\n  \"order\": 0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/owner/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "categories"]
            }
          }
        }
      ]
    },
    {
      "name": "Owner - Menu Items",
      "item": [
        {
          "name": "Get Menu Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/menu-items?restaurantId={{restaurantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "menu-items"],
              "query": [
                {
                  "key": "restaurantId",
                  "value": "{{restaurantId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Menu Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"{{restaurantId}}\",\n  \"categoryId\": \"category_id_here\",\n  \"name\": \"Burger\",\n  \"description\": \"Delicious burger\",\n  \"priceCents\": 1500,\n  \"orderable\": true,\n  \"soldOut\": false,\n  \"modifiers\": [\n    {\n      \"name\": \"Add Cheese\",\n      \"priceDelta\": 200\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/owner/menu-items",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "menu-items"]
            }
          }
        }
      ]
    },
    {
      "name": "Owner - Orders",
      "item": [
        {
          "name": "Get Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/orders?restaurantId={{restaurantId}}&status=all&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "orders"],
              "query": [
                {
                  "key": "restaurantId",
                  "value": "{{restaurantId}}"
                },
                {
                  "key": "status",
                  "value": "all"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/owner/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "orders", "{{orderId}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Owner - Analytics",
      "item": [
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owner/analytics?restaurantId={{restaurantId}}&days=30",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owner", "analytics"],
              "query": [
                {
                  "key": "restaurantId",
                  "value": "{{restaurantId}}"
                },
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Public - Customer",
      "item": [
        {
          "name": "Get Public Menu",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/restaurant/demo-restaurant/menu",
              "host": ["{{baseUrl}}"],
              "path": ["api", "restaurant", "demo-restaurant", "menu"]
            }
          }
        },
        {
          "name": "Create Checkout Session",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"{{restaurantId}}\",\n  \"customerName\": \"Jane Doe\",\n  \"tableNumber\": 5,\n  \"customerEmail\": \"jane@example.com\",\n  \"items\": [\n    {\n      \"menuItemId\": \"menu_item_id\",\n      \"name\": \"Burger\",\n      \"priceCents\": 1500,\n      \"quantity\": 2,\n      \"modifiers\": [\"Add Cheese\"]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/restaurant/demo-restaurant/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "restaurant", "demo-restaurant", "checkout"]
            }
          }
        }
      ]
    }
  ]
}
