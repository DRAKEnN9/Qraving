# Database
MONGODB_URI=mongodb://localhost:27017/qr-menu-manager
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/qr-menu-manager?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
RAZORPAY_PLAN_BASIC=plan_basic_id_here
RAZORPAY_PLAN_ADVANCE=plan_advance_id_here

# Email (choose one)
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Or Nodemailer with Gmail
# GMAIL_USER=your-email@gmail.com
# GMAIL_APP_PASSWORD=your-gmail-app-password

# Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Application
APP_URL=http://localhost:3000
NODE_ENV=development

# JWT Secret (for custom auth if not using NextAuth)
JWT_SECRET=your-jwt-secret-key-here

# Socket.io (optional - set in production)
SOCKET_IO_PATH=/socket.io

# Server Configuration
# Set to 0.0.0.0 to allow connections from any IP address
# Set to localhost to restrict to local connections only
HOSTNAME=0.0.0.0
PORT=3000
